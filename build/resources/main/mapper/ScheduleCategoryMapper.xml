<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aloha.seniorschedule.mapper.ScheduleCategoryMapper">

    <select id="selectAll" resultType="ScheduleCategory">
        SELECT * FROM schedule_category ORDER BY sort_order ASC
    </select>

    <select id="selectById" resultType="ScheduleCategory">
        SELECT * FROM schedule_category WHERE id = #{id}
    </select>

    <select id="selectByName" resultType="ScheduleCategory">
        SELECT * FROM schedule_category WHERE name = #{name}
    </select>

</mapper>
